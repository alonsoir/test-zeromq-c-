{
  "_comment": "RAG Logger Configuration - OPTIMAL (Day 30)",
  "_authors": "Alonso Isidoro Roman + Claude (Anthropic)",
  "_version": "1.1",
  "_date": "2025-12-31",
  "_optimization": "31 MB/h leak with artifacts + flush() - restart every 72h via cron",
  "base_path": "/vagrant/logs/rag",
  "deployment_id": "ml-defender-001",
  "node_id": "defender-node-01",
  "log_version": "1.0",
  "thresholds": {
    "_comment": "Control what events get logged",
    "min_score_to_log": 0.70,
    "min_divergence_to_log": 0.30,
    "log_all_divergences": true,
    "log_consensus": false
  },
  "performance": {
    "_comment": "Artifacts ENABLED for optimal memory (31 MB/h vs 50 MB/h without)",
    "max_events_per_file": 10000,
    "max_file_size_mb": 100,
    "save_protobuf_artifacts": true,
    "save_json_artifacts": true,
    "compress_on_rotate": false
  },
  "features": {
    "_comment": "Optional features (not yet implemented)",
    "enable_geoip": false,
    "enable_pcap_capture": false
  }
}
